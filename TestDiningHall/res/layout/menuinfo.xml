<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0099ff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="" />

        <CheckBox
            android:id="@+id/info_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:text="checkbox" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="#ffffffff"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text=">" />
        <!--
         above two 2 commands are require for button insdie listview
         to fire onClick event when clicked.
        -->

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="#ffffffff" />

                <TextView
                    android:id="@+id/info_textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:background="#ffffffff"
                    android:ems="10" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="#ffffffff" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" >

        <Button
            android:id="@+id/diningHall_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="24"
            android:background="#ffcccc00"
            android:text="Dining\nHall"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView00"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:background="#ffe3e300"
            android:ems="10"
            android:text="" />

        <Button
            android:id="@+id/meal_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="24"
            android:background="#ffcccc00"
            android:text="Meal"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:background="#ffe3e300"
            android:ems="10" />

        <Button
            android:id="@+id/allMenu_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="24"
            android:background="#ffcccc00"
            android:text="All\nMenu"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:background="#ffe3e300"
            android:ems="10" />

        <Button
            android:id="@+id/favorite_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="24"
            android:background="#ffcccc00"
            android:text="Favorite"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
