<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0099ff"
    android:orientation="vertical" >

    
    <!-- Top 3 Buttons for Meal Screen -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        
        <Button
            android:id="@+id/breakfast_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:background="#ff0079c9"
            android:textColor="#ffffffff"
            android:text="Breakfast" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:background="#ff004a7b"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:text="" />

        <Button
            android:id="@+id/lunch_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:background="#ff005187"
            android:textColor="#ffffffff"
            android:text="Lunch" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ff004a7b"
            android:layout_weight="0.05"
            android:text="" />

        <Button
            android:id="@+id/dinner_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:background="#ff005187"
            android:textColor="#ffffffff"
            android:text="Dinner" />

    </LinearLayout>
     <!-- End of Top 3 Buttons for Meal Screen -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
         android:layout_weight="8" >
	 	<!-- List of MenuList began here  -->
         <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>       
        <!-- List of MenuList end here  -->  
    </LinearLayout>

    
     
    
    
 <!-- Start of Bottom 4 buttons  -->

 <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" >

        <Button
            android:id="@+id/diningHall_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="24"
            android:background="#ffcccc00"
            android:text="Dining\nHall"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView00"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:background="#ffe3e300"
            android:ems="10"
            android:text="" />

        <Button
            android:id="@+id/meal_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="24"
            android:background="#fffdfd70"
            android:text="Meal"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:background="#ffe3e300"
            android:ems="10" />

        <Button
            android:id="@+id/allMenu_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="24"
            android:background="#ffcccc00"
            android:text="All\nMenu"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:background="#ffe3e300"
            android:ems="10" />

        <Button
            android:id="@+id/favorite_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="24"
            android:background="#ffcccc00"
            android:text="Favorite"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
 <!-- End of Bottom 4 buttons  -->

</LinearLayout>
